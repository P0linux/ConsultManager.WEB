@model BL.DTO.Models.QueueMemberDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>QueueMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeInterval" class="control-label"></label>
                <input asp-for="TimeInterval" class="form-control" />
                <span asp-validation-for="TimeInterval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Queue" class="control-label"></label>
                <select asp-for="QueueId" class ="form-control" asp-items="ViewBag.QueueId"></select>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-success" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Get all queue members</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
