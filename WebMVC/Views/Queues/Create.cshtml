@model BL.DTO.Models.QueueDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Queue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IssueCategory" class="control-label">Issue category</label>
                <select asp-for="IssueCategory" class="form-control" asp-items="ViewBag.IssueCategory"></select>
                @*<input asp-for="IssueCategory" class="form-control" />
        <span asp-validation-for="IssueCategory" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consultation" class="control-label"></label>
                <select asp-for="ConsultationId" class ="form-control" asp-items="ViewBag.ConsultationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Get all queues</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
